<div class="text-center p-10">
    <h1 class="font-bold text-4xl mb-4">Buy Now </h1>
    <h1 class="text-3xl"></h1>
</div>

<!-- âœ… Grid Section - Starts Here ðŸ‘‡ -->
<section id="Projects" class="w-fit mx-auto grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 justify-items-center justify-center gap-y-20 gap-x-14 mt-10 mb-5">

  <!-- Loop through each product and render the card -->
  <% @products.each do |product| %>
    <div class="w-72 bg-white shadow-md rounded-xl duration-500 hover:scale-105 hover:shadow-xl">
        <a href="#">
            <% if product.product_images.attached? %>
              <% product.product_images.each_with_index do |image, index| %>
                <img src="<%= rails_blob_url(image) %>"
                     alt="Product"
                     class="h-80 w-72 object-cover rounded-t-xl" />
              <% end %>
            <% else %>
              <p class="text-gray-500 text-center py-3">No image available</p>
            <% end %>
            <div class="px-4 py-3 w-72">
                <span class="text-gray-400 mr-3 uppercase text-xs">Brand</span>
                <p class="text-lg font-bold text-black truncate block capitalize"><%= product.name %></p>
                <div class="flex items-center">
                    <p class="text-lg font-semibold text-black cursor-auto my-3"><%= number_to_currency(product.price) %></p>
                    <!-- You can add the del tag here for discounted price if needed -->
                    <div class="ml-auto">
                        <%= link_to "View Details", product_path(product), class: "text-blue-600 hover:underline" %>
                    </div>
                </div>
            </div>
        </a>
    </div>
  <% end %>

</section>
<!-- ðŸ›‘ Grid Section - Ends Here -->
